                                    <SfButton CssClass="button-primary button-default" Content="Save" IsPrimary="true" />
                                </div>
                            </div>
                        </EditForm>
                    </Content>
                </DialogTemplates>
                <DialogPositionData X="center" Y="center" />
            </SfDialog>

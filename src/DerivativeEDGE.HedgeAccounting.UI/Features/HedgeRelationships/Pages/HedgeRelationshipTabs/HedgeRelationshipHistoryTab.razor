<div class="hedge-relation-logs-body">
    @if (HistoryActivities?.Any() == true)
    {
        @foreach (var activity in HistoryActivities)
        {
            var displayDate = GetDisplayDate(activity);
            <div class="flex flex-col bg-gray-50 border-b border-gray-300 p-2.5">
                <div class="flex items-center gap-2 w-full">
                    <div class="flex-shrink-0 w-6 text-gray-700">
                        <i class="fa @GetActivityIcon(activity.ActivityType)" aria-hidden="true"></i>
                    </div>
                    <h3 class="history-title">@GetActivityTypeDisplayText(activity)</h3>
                </div>
                <div class="flex items-center flex-wrap gap-2 ml-8 text-anotation">
                    <span>@displayDate</span>
                    <span>|</span>
                    <span>@(activity.CreatedByUser?.Person?.FullName ?? "Unknown User")</span>
                </div>
            </div>
        }
    }
    else
    {
        <div class="flex flex-col items-center justify-center p-8 text-gray-500">
            <div class="text-center">
                <h3>📋 No History Data Available</h3>
            </div>
        </div>
    }
</div>
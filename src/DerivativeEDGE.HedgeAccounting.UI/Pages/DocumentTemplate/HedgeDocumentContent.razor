@page "/hedgedocumentcontent"

<PageTitle>Hedge Document Content</PageTitle>

<div class="flex grid">
    <div class="breadcrumb-div">
        <ul class="breadcrumb">
            <li class="breadcrumb-icons">
                <a href="/"><i class="fa fa-home linkColor" style="padding-right:.6rem;"></i><i class="fa fa-chevron-right linkColor"></i></a>
            </li>
            <li class="breadcrumb-first">
                <a href="hrhedgedocumenttemplate" style="text-decoration: none;">Hedge Document Template<i class="fa fa-sm fa-chevron-right " style="padding-left:.5rem;"></i></a>
            </li>
            <li class="breadcrumb-last">Hedge Document Content</li>
        </ul>
    </div>

    @if (AllowedBehavior != null)
    {
        <div class="view-container-next-gen">
            @if (IsErrorMessageVisible)
            {
                <div class="msg-with-header">
                    <div class="content-section">
                        <SfMessage Severity="MessageSeverity.Error">
                            <h1>@ErrorTitle</h1>
                            <p>@ErrorMessage</p>
                        </SfMessage>
                    </div>
                </div>
            }
            <div class="index-header">
                <div class="client-filter">
                    @if (AllowedBehavior.IsDpiUser)
                    {
                        <div class="col-2">
                            <div class="dp-inputs">
                                <span class="input-label">Client</span>
                                <SfComboBox TValue="long?" CssClass="dropdown-input" Enabled="true" TItem="ClientName" Width="28.125rem" PopupHeight="14.375rem" Placeholder="Select" @bind-Value="SelectedClientId" DataSource="Clients">
                                    <ComboBoxEvents TValue="long?" TItem="ClientName" ValueChange="ClientComboboxValueChange" Created="ClientComboboxCreated" />
                                    <ComboBoxFieldSettings Value="@nameof(ClientName.Id)" Text="@nameof(ClientName.Name)" />
                                </SfComboBox>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="dp-inputs">
                            <div class="all-contents">
                                <span>All Contents</span>
                            </div>
                        </div>
                    }
                </div>
                @if (IsCreateContentButtonVisible)
                {
                    <div class="new-content-btn text-right space-x-4 dp-buttons">
                        <SfButton CssClass="button-secondary button-default" Content="Create Content" OnClick="@CreateContentButtonClicked"></SfButton>
                    </div>
                }
            </div>
            @if (_clientDropdownInitialized || AllowedBehavior?.IsDpiUser == false)
            {
                <Contents @ref="@_contentsComponent" AllowedBehavior="@AllowedBehavior" SelectedClientId="@SelectedClientId"
                          OnContentsListUpdated="@ContentsListUpdated" OnActionTriggerred="@HideErrorMessages" OnActionFailed="@ShowActionFailed" />
            }
        </div>
    }
</div>